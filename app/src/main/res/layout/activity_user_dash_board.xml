<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDashBoard">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking"
        android:textColor="@color/white"
        android:id="@+id/btn_book"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message"
        android:layout_below="@id/btn_book"
        android:id="@+id/btn_message"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Barber"
        android:textColor="@color/white"
        android:layout_below="@id/btn_message"
        android:id="@+id/btn_view_barber"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/hairStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_view_barber"

        android:layout_centerHorizontal="true"
        android:text="@string/ChooseHairStyles"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/hairProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hairStyles"

        android:layout_centerHorizontal="true"
        android:text="@string/Shop_hair"
        android:textColor="@color/white" />

</RelativeLayout>